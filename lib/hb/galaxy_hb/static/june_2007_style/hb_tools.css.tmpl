#__disabled {
	display:none;
	position:absolute;
	top:0px;
	left:0px;
	width: 100%;
	height: 100%;
	opacity: 0.50;
	filter:alpha(opacity=50);
	z-Index:1000;
	background: #EEEEEE url("static/hyperbrowser/images/div/dna.gif") no-repeat center center fixed;
}

