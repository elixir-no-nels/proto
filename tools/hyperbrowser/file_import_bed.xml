<tool name="Results as track" id="file_import_bed" hidden="true">

	<description>
		imports local results file
	</description>

	<command interpreter="python">file_import.py $input $output bed</command>

	<inputs>
		<param name="input" type="text" label="Input filename"/>
		<param name="dbkey" type="text" value="hg18" />
		<param name="datatype" type="text" value="bed" />
		<param name="basicQuestionId" type="hidden" value="" />
  </inputs>


	<outputs>
		<data format="bed" name="output" />
	</outputs>

</tool>
